---
import Section from "../Section.astro"

import { certificates } from "@cv"
---


<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        const years = new Date(date).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Ver ${issuer}`} target="_blank">
                      {issuer}
                    </a>
                  </h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{name}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
